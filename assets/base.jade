doctype html
html
	head
		block title
			title Miniscope
		style stylecommon
			a			{color:#18a303;text-decoration:none;}
			a:visited		{color:#105802;text-decoration:none;}
			a:active, a:hover	{color:#106802;text-decoration:underline;}
			#minilogo {vertical-align: top;}
			img {border:0;}
			tt {margin:0;}
			form, pre {padding:0px;margin:0px;}
			#bar {
				padding-left: 0.5em;
				margin-bottom:0.2em;
			}
			.center {text-align: center;}

	body
		block header
		block common
			#bar
				form(action="/")
					input#search(type="text", name="search", placeholder="Enter text to search")
					select#kind(name="kind")
						option(value="csymbol", selected) Find this C Symbol
						option(value="funcdefintion") Find this function definition
						option(value="funcscalledby") Find functions called by this function
						option(value="funcscalling") Find functions calling this function
						option(value="textstring") Find this text string
						option(value="changetext") Change this text string
						option(value="egreppattern") Find this egrep pattern
						option(value="findfile") Find this file
						option(value="filesinclude") Find files #including this file
					button(type="submit") Search
		block content
		block footer
			#footer
				p.center Generated by
					a#minilogo(href='https://github.com/edwardchoh/miniscope', alt="miniscope")
						img(src='data:image/png;base64,')
		block bodyscripts
			script
				function queryString(key) {
					var pa = window.location.search.substring(1);
					var params = pa.split("&");

					for (var i = 0; i < params.length; i++) {
						var kv = params[i].split("=");
						if (kv[0] == key) {
							return kv[1];
						}
					}
				}
				var value = queryString("search");
				if (value) {
					document.getElementById('search').value = value;
				}
				var value = queryString("kind");
				if (value) {
					document.getElementById('kind').value = value;
				}